{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es5",
    "types": [
    ]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
   "files": [
     "typings/index.d.ts",
     "src/index.ts",
     "src/interfaces.ts",
     "src/task.ts"
   ]
}
