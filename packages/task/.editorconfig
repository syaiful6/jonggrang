# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true


[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.js]
indent_size = 2
indent_style = space

[*.ts]
indent_size = 2
indent_style = space

[*.less]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false
